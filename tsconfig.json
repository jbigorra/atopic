{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~views/*": ["./src/views/*"],
      "~modules/*": ["./src/modules/*"],
      "~utils/*": ["./src/utils/*"],
      "~config/*": ["./src/config/*"],
      "~src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
